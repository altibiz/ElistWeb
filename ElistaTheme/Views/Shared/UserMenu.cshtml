@using OrchardCore.Commerce.Abstractions
@inject IShoppingCartPersistence cart
@{
    var some = await cart.Retrieve();
}
<li class="list-inline-item position-relative me-3">
    <a class="text-dark text-primary-hover" href="/cart">
        <svg class="svg-icon navbar-icon">
            <use xlink:href="#retail-bag-1"> </use>
        </svg>
        <div class="navbar-icon-badge">@some.Count</div>
    </a>
</li>